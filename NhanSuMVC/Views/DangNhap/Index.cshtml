@model NhanSuMVC.Models.ViewModels.DangNhapVM
@{
    Layout = null; // Bỏ qua layout
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .background {
            position: relative;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        /* Add a div element to blur the background */
        .background-img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://hoaphatgiasi.vn/wp-content/uploads/2023/06/open-space-office-2-1400x788.jpg');
            background-size: cover;
            background-position: center;
            filter: blur(1px); /* Apply blur effect */
            z-index: -1; /* Ensure it stays behind the content */
        }

        /* Dark overlay */
        .background-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.2); /* Dark overlay */
            z-index: -1; /* Overlay stays behind content */
        }

        .login-card {
            background: rgba(255, 255, 255, 0.9); /* Transparent background for the login card */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            width: 400px;
        }

            .login-card input, .login-card button {
                margin-bottom: 15px;
            }
    </style>
</head>
<body>
    <div class="background">
        <!-- Background image -->
        <div class="background-img"></div>

        <!-- Dark overlay -->
        <div class="background-overlay"></div>

        <div class="login-card">
            <h2 class="text-center">Đăng Nhập</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" asp-for="TenDN" placeholder="Tên đăng nhập">
                    </div>
                    <span asp-validation-for="TenDN" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" asp-for="MatKhau" placeholder="Mật khẩu"
                               data-val="true" data-val-required="Vui lòng nhập mật khẩu"
                               id="MatKhau" autocomplete="current-password">
                    </div>
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success btn-block">Đăng Nhập</button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
